#include <stdio.h>
 
int main()
{
    int x,y,z,t;
    printf("\n??入三??字:\n");
    scanf("%d%d%d",&x,&y,&z);
    if (x>y) { /*交?x,y的值*/
        t=x;x=y;y=t;
    }
    if(x>z) { /*交?x,z的值*/
        t=z;z=x;x=t;
    }
    if(y>z) { /*交?z,y的值*/
        t=y;y=z;z=t;
    }
    printf("?小到大排序: %d %d %d\n",x,y,z);
}
